#version 460 core

#extension GL_ARB_separate_shader_objects : enable
#extension GL_ARB_shading_language_420pack : enable

in VS_FS_INTERFACE
{
  vec3 vcolor;
} fragment;

out vec4 out_color;

void main()
{ 
  out_color = vec4(fragment.vcolor, 1.0f);
}