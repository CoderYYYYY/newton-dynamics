#version 460 core

layout (binding = 0) uniform sampler2D sColorMap;
layout(location = 0) out vec4 out_color;

uniform int usetexture;

in VS_FS_INTERFACE
{
    vec4 world_coord;
    vec3 v_coord;
    vec3 eye_coord;
    vec3 normal_coord;
    vec3 normals;
	vec4 colors;
	vec2 texture;
} fragment;

void main()
{
  
  vec4 value = vec4(0.0, 0.0, 0.0, 1.0);

  if (usetexture == 1){  
    value = fragment.colors * texture2D(sColorMap, fragment.texture); 
  } else {
    value = fragment.colors; 
  }	

  out_color = value; 
}